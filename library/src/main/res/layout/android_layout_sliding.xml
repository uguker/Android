<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标题容器 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@id/android_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.uguke.android.widget.CommonToolbar
            android:id="@id/android_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar"
            app:tbBackIcon="@drawable/def_back_common_dark"
            app:tbBackIconVisible="true"
            app:tbRippleEnable="false"
            app:tbTitleTextGravity="center">

        </com.uguke.android.widget.CommonToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.uguke.android.widget.SlidingTabLayout
            android:id="@id/android_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbed"
            android:layout_alignParentTop="true"
            android:background="@color/foreground"
            app:tl_indicator_color="@color/colorPrimary"
            app:tl_textSelectedColor="@color/colorPrimary"
            app:tl_textSize="@dimen/body"
            app:tl_textUnselectedColor="@color/hint">

        </com.uguke.android.widget.SlidingTabLayout>

        <!-- 头部布局 -->
        <FrameLayout
            android:id="@id/android_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/android_tab">

        </FrameLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@id/android_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/android_header"
            android:layout_above="@id/android_footer"
            android:overScrollMode="never">

        </androidx.viewpager.widget.ViewPager>

        <!-- 底部布局 -->
        <FrameLayout
            android:id="@id/android_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </FrameLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
