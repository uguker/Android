<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标题容器 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/android_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/android_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>

        <com.uguke.android.widget.CommonTabLayout
            android:id="@+id/android_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbed"
            android:background="@color/foreground"
            app:tl_iconHeight="20dp"
            app:tl_iconWidth="20dp"
            app:tl_indicator_color="@color/colorAccent"
            app:tl_indicator_height="0dp"
            app:tl_indicator_style="NORMAL"
            app:tl_textSelectColor="@color/colorAccent"
            app:tl_textUnselectColor="@color/hint"
            app:tl_textsize="12sp"
            app:tl_iconGravity="BOTTOM"
            app:tl_underline_color="@color/divider"
            app:tl_underline_gravity="TOP"
            app:tl_underline_height="1dp">

        </com.uguke.android.widget.CommonTabLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
