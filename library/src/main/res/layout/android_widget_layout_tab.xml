<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/android_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true" />

    <com.cqray.android.widget.DotView
        android:id="@+id/android_tab_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/android_tab_title"
        android:layout_toRightOf="@+id/android_tab_title"
        android:gravity="center"
        android:textColor="@color/foreground"
        android:textSize="@dimen/min"
        android:visibility="gone"
        app:mvBackgroundColor="#FD481F"
        app:mvRadiusHalfHeight="true"
        app:mvStrokeColor="@color/foreground"
        app:mvStrokeWidth="1dp" />

</RelativeLayout>
