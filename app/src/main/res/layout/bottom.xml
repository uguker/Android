<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#555555"
    android:orientation="vertical">

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@null"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:textIsSelectable="false"
        android:visibility="gone" />

    <com.allen.library.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:visibility="gone"
        app:sLeftIconMarginLeft="@dimen/content"
        app:sLeftIconRes="@mipmap/ic_launcher"
        app:sLeftTextColor="@color/text"
        app:sLeftTextSize="@dimen/h3"
        app:sLeftTextString="时候">

    </com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:visibility="gone"
        app:sRightSwitchMarginRight="@dimen/content"
        app:sRightViewType="switchBtn"
        app:sSwitchMinWidth="60dp">

    </com.allen.library.SuperTextView>


    <com.allen.library.SuperButton
        android:id="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:text="你是" />

</LinearLayout>
