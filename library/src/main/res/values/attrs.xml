<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleInputLayout">
        <attr name="inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="number" value="1" />
            <enum name="password" value="2" />
        </attr>
        <!--<attr name="inputStyle" format="enum">-->
        <!--<enum name="default" value="0"/>-->
        <!--<enum name="center" value="1"/>-->
        <!--</attr>-->

        <attr name="inputCenter" format="boolean" />
        <attr name="inputPadding" format="dimension" />
        <attr name="inputIcon" format="reference" />
        <attr name="inputBackground" format="reference" />
        <attr name="inputHint" format="string" />
        <attr name="inputText" format="string" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputHintColor" format="color" />
        <attr name="inputMaxLength" format="integer" />
        <attr name="inputDeleteIcon" format="reference" />
        <attr name="inputToggleVisibleIcon" format="reference" />
        <attr name="inputToggleInvisibleIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderOverlay" format="boolean" />
        <attr name="circleBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawable" format="reference|color" />
        <attr name="rightDrawable" format="reference|color" />
        <attr name="topDrawable" format="reference|color" />
        <attr name="bottomDrawable" format="reference|color" />

        <attr name="leftDrawableWidth" format="reference|dimension" />
        <attr name="rightDrawableWidth" format="reference|dimension" />
        <attr name="topDrawableWidth" format="reference|dimension" />
        <attr name="bottomDrawableWidth" format="reference|dimension" />

        <attr name="leftDrawableHeight" format="reference|dimension" />
        <attr name="rightDrawableHeight" format="reference|dimension" />
        <attr name="topDrawableHeight" format="reference|dimension" />
        <attr name="bottomDrawableHeight" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="CodeView">
        <attr name="formatText" format="string" />
        <attr name="duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="CommonToolbar">
        <!-- 内部间隔 -->
        <attr name="ct_innerSpace" format="dimension" />
        <!-- 水波纹效果 -->
        <attr name="ct_rippleEffect" format="boolean" />
        <!-- Material样式 -->
        <attr name="ct_materialStyle" format="boolean" />
        <!-- 标题 -->
        <attr name="ct_title" format="string" />
        <attr name="ct_titleTextColor" format="color" />
        <attr name="ct_titleTextSize" format="dimension" />
        <attr name="ct_titleTextBold" format="boolean" />
        <attr name="ct_titleSpace" format="dimension" />
        <!-- 返回 -->
        <attr name="ct_backIcon" format="reference" />
        <attr name="ct_backIconEnable" format="boolean" />
        <attr name="ct_backIconVisible" format="boolean" />
        <attr name="ct_backText" format="string" />
        <attr name="ct_backTextColor" format="color" />
        <attr name="ct_backTextSize" format="dimension" />
        <attr name="ct_backTextBold" format="boolean" />
        <attr name="ct_backTextVisible" format="boolean" />
        <!-- 行为文字 -->
        <attr name="ct_actionText" format="string" />
        <attr name="ct_actionTextColor" format="color" />
        <attr name="ct_actionTextSize" format="dimension" />
        <attr name="ct_actionTextBold" format="boolean" />
        <attr name="ct_actionTextVisible" format="boolean" />
        <attr name="ct_actionSpace" format="dimension" />
        <attr name="ct_dividerColor" format="dimension" />
        <attr name="ct_dividerHeight" format="dimension" />
        <attr name="ct_dividerSpace" format="dimension" />
        <attr name="ct_dividerVisible" format="dimension" />

    </declare-styleable>

    <attr name="dividerColor" format="dimension" />
    <attr name="dividerHeight" format="dimension" />
    <attr name="dividerSpace" format="dimension" />
    <attr name="dividerVisible" format="dimension" />
</resources>
