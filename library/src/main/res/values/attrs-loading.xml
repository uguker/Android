<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingLayout">
        <attr name="llBackground" format="reference" />
        <attr name="llTextColor" format="color" />
        <attr name="llTextSize" format="dimension" />
        <!-- 空布局 -->
        <attr name="llEmptyImage" format="reference" />
        <attr name="llEmptyText" format="string" />
        <attr name="llEmptyMargin" format="dimension" />
        <!-- 错误布局 -->
        <attr name="llErrorImage" format="reference" />
        <attr name="llErrorText" format="string" />
        <attr name="llErrorMargin" format="dimension" />
        <attr name="llRetryMargin" format="dimension" />
        <attr name="llRetryText" format="string" />
        <attr name="llRetryTextColor" format="color" />
        <attr name="llRetryTextSize" format="dimension" />
        <attr name="llRetryBackground" format="reference" />
        <!-- 加载布局页面 -->
        <attr name="llLoadingText" format="string" />
        <attr name="llLoadingColor" format="dimension" />
        <attr name="llLoadingSize" format="dimension" />
        <attr name="llLoadingMargin" format="dimension" />
        <attr name="llLoadingOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
    </declare-styleable>

    <style name="LoadingLayoutStyle">
        <item name="llTextColor">@color/tint</item>
        <item name="llTextSize">@dimen/body</item>
        <item name="llEmptyImage">@drawable/widget_ic_empty</item>
        <item name="llEmptyText">暂无数据</item>
        <item name="llEmptyMargin">@dimen/content</item>
        <item name="llErrorImage">@drawable/widget_ic_error</item>
        <item name="llErrorText">无网络连接，请检查您的网络...</item>
        <item name="llErrorMargin">@dimen/content</item>
        <item name="llRetryMargin">@dimen/content</item>
        <item name="llRetryText">加载失败，点击重试</item>
        <item name="llRetryTextColor">@color/tint</item>
        <item name="llRetryTextSize">@dimen/body</item>
        <item name="llRetryBackground">@drawable/widget_loading_btn</item>
        <item name="llLoadingText">加载中...</item>
        <item name="llLoadingSize">24dp</item>
        <item name="llLoadingMargin">@dimen/small</item>
        <item name="llLoadingOrientation">horizontal</item>
    </style>

</resources>
